<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Messenger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Primary brand color-->
        <item name="colorPrimary">@color/my_primary_color</item>
        <item name="colorPrimaryVariant">@color/my_primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--Secondary brand color-->
        <item name="colorSecondary">@color/my_second_color</item>
        <item name="colorSecondaryVariant">@color/my_second_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/off_white</item>
    </style>

</resources>